{
  "rules": {
    "declaration-property-value-blacklist": null,
    "function-url-quotes": null,
    "selector-class-pattern": null,
    "selector-max-id": 0,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extend",
          "at-root",
          "debug",
          "warn",
          "error",
          "if",
          "else",
          "for",
          "each",
          "while",
          "mixin",
          "include",
          "content",
          "return",
          "function",
          "screen",
          "tailwind"
        ]
      }
    ]
  },
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-prettier"
  ]
}
